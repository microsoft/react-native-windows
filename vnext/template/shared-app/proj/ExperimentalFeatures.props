<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <!--
    This shim provides backwards compatibility with legacy community modules
    which import configuration through `ExperimentalFeatures.props`. Project
    configuration is now donw in `ProjectConfig.props` instead.
  -->
  <Import Project="$(MSBuildThisFileDirectory)Project.props" Condition="$(MSBuildThisFileDirectory)Project.props" />

  <ItemDefinitionGroup>
    <ClCompile AdditionalOptions="%(AdditionalOptions) $(CLCompileOptions)" />
    <ClCompile AdditionalOptions="%(AdditionalOptions) $(LinkOptions)" />
    <ClCompile AdditionalOptions="%(AdditionalOptions) $(MidlOptions)" />
  </ItemDefinitionGroup>

</Project>