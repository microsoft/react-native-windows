# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = false

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

[*.{c,cpp,h,hpp}]
end_of_line = crlf

# Visual C++ Code Style settings
cpp_generate_documentation_comments = doxygen_double_slash_exclamation

# Visual Studio project files
[*.{config,csproj,njsproj,props,targets,vcxitems,vcxitems.filters,vcxproj,vcxproj.filters}]
end_of_line = crlf
insert_final_newline = false

# IDE0034: Simplify 'default' expression
csharp_prefer_simple_default_expression = false:none

[*.ps1]
indent_style = tab
indent_size = 4
