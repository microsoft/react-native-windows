<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Target Name="EnsureUseHermes" BeforeTargets="PrepareForBuild" Condition="'$(UseHermes)' != 'true'">
    <Warning Text="Property 'UseHermes' was not set to 'true'. Projects built against Microsoft.ReactNative.Composition require UseHermes and it will be set to true." />
  </Target>

  <PropertyGroup>
    <UseHermes>true</UseHermes>
  </PropertyGroup>

  <Target Name="EnsureUseFabric" BeforeTargets="PrepareForBuild" Condition="'$(UseFabric)' != 'true'">
    <Warning Text="Property 'UseFabric' was not set to 'true'. Projects built against Microsoft.ReactNative.Composition require UseFabric and it will be set to true." />
  </Target>

  <PropertyGroup>
    <UseFabric>true</UseFabric>
  </PropertyGroup>

  <Target Name="EnsureUseWinUI3" BeforeTargets="PrepareForBuild" Condition="'$(UseWinUI3)' != 'true'">
    <Warning Text="Property 'UseWinUI3' was not set to 'true'. Projects built against Microsoft.ReactNative.Composition require UseWinUI3 and it will be set to true." />
  </Target>

  <PropertyGroup>
    <UseWinUI3>true</UseWinUI3>
  </PropertyGroup>

  <Import Project="$(MSBuildThisFileDirectory)Microsoft.ReactNative.Common.props" />
</Project>
