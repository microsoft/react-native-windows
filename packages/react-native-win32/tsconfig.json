{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "outDir": ".",
    "declaration": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "paths": {
      "@office-iss/react-native-win32": [
        "src/Libraries/react-native/typings-main"
      ] // This mapping is relative to "baseUrl"
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "lib"]
}
